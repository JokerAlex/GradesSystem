<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.grades.mapping.Search">

    <select id="getAll" resultType="java.util.HashMap">
        SELECT
        <foreach collection="list" item="colName" index="index" separator=",">
            `${colName}`
        </foreach>
        FROM ${tableName};
    </select>

    <select id="getOne" resultType="java.util.HashMap">
        SELECT
        <foreach collection="list" item="colName" index="index" separator=",">
            `${colName}`
        </foreach>
        FROM ${tableName}
        WHERE ${stuIdName} = #{id} AND ${stuName} = #{name};
    </select>
    <select id="getColNames" resultType="String">
        SHOW COLUMNS FROM ${tableName};
    </select>

</mapper>